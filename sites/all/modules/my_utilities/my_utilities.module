<?php

function my_utilities_init() {
	global $user, $custom_theme;
	if( $user->uid == 0 ) {
		$custom_theme = 'bootstrap';
	}
	if( $user->uid == 1 ) {
		$custom_theme = 'garland';
	}
	if( in_array('admin user', $user->roles) ) {
		$custom_theme = 'admin';
	}
}

